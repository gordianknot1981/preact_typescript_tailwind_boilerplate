{
    "private": true,
    "name": "temp",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "preact build",
        "serve": "sirv build --port 8080 --cors --single",
        "dev": "preact watch",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "test": "jest ./tests"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
